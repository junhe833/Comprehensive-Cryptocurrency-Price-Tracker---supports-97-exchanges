{
  "manifest_version": 2,
 "short_name": "Check on different exchanges",
  "name": "Crypto Checker",
  "description": "Check prices on multiple different exchanges. Shows notifications when prices goes below/above your set price.",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": {
	
	},
    "default_popup": "popup.html"
  },
	"background": {
        "persistent": true,
        "scripts": ["js/ccxt.browser.js", "data.js", "background.js", "popup.js"]
    },
  "permissions": [
    "storage",   "http://*/*",
    "https://*/*"
  ]
}
